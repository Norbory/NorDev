---
import Layout from '../layouts/Layout.astro';
import Title from '../components/general/title.astro';
import MainImage from '../components/componentPage1/mainImage.astro';
import Subtitle from '../components/general/subtitle.astro';
import SubTitle1 from '../components/general/SubTitle1.astro'
import {ProjectCard} from '../components/general/projectCard.tsx';
import {project} from '../utils/utilsData.ts';
---

<Layout title="Dream Developer | Enlighten the path">
	<div class="overflow-hidden flex flex-1 align-center lg:flex-row lg:justify-around justify-start flex-col max-w-7xl 2xl:ml-60 h-full">
		<section class="flex lg:flex-row">
			<div>
				<Title>I'm</Title>
				<Title>Norbory</Title>
				<div class="md:max-w-40 max-w-20 md:h-auto h-4 bg-main my-4 text-main md:my-10 mx-4">f</div>
				<div class="flex flex-row mx-4">
					<a 
						class="flex items-center justify-center rounded-full 
						hover:bg-main md:w-10 md:h-10 w-8 h-8 mx-3 border border-main" 
						href="https://github.com/Norbory" 
						target="_blank"
					>
						<svg 
							class="md:w-5 md:h-5 w-4 h-4 text-active hover:text-sunny"
							aria-hidden="true" 
							xmlns="http://www.w3.org/2000/svg" 
							fill="currentColor" 
							viewBox="0 0 20 20"
						>
							<path fill-rule="evenodd" d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z" clip-rule="evenodd"/>
						</svg>
					</a>
					<a 
						class="flex items-center justify-center rounded-full 
						hover:bg-main md:w-10 md:h-10 w-8 h-8 mx-3 border border-main" 
						href="https://www.linkedin.com/in/angelo-fabrizio-mandros-ramos/" 
						target="_blank"
					>
						<svg 
							class="md:w-5 md:h-5 w-4 h-4 text-active hover:text-sunny" 
							aria-hidden="true" 
							xmlns="http://www.w3.org/2000/svg" 
							fill="currentColor" 
							viewBox="0 0 15 15"
						>
							<path fill-rule="evenodd" d="M7.979 5v1.586a3.5 3.5 0 0 1 3.082-1.574C14.3 5.012 15 7.03 15 9.655V15h-3v-4.738c0-1.13-.229-2.584-1.995-2.584-1.713 0-2.005 1.23-2.005 2.5V15H5.009V5h2.97ZM3 2.487a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" clip-rule="evenodd"/>
							<path d="M3 5.012H0V15h3V5.012Z"/>
						</svg>
					</a>
				</div>
			</div>
			<MainImage />
		</section>
		<section class="lg:ml-96 md:mt-0 mt-10">
			<Subtitle>- Mechatronic Engineer</Subtitle>
			<SubTitle1> FullStack Developer</SubTitle1>
			<p class="text-dark text-lg md:text-xl shape-outside circle-50% max-w-2xl xl:ml-16 lg:ml-8 ml-4 my-4">
				Nowadays, get an opportunity to prove your skills is less frequent,
				but not impossible.
			</p>
			<p class="text-dark text-lg md:text-xl shape-outside circle-50% max-w-2xl xl:ml-16 lg:ml-8 ml-4 my-4">
				I'm ready and compromised to fulfill any task life would give me.
			</p>
			<p class="text-dark text-lg md:text-xl shape-outside circle-50% max-w-2xl xl:ml-16 lg:ml-8 ml-4 my-4">
				Let's start our trip together.
			</p>
			<a 
				href="/works" 
				class="text-main hover:text-sunny justify-center cursor-pointer font-bold 
				hover:bg-main focus:ring-4 focus:outline-none focus:ring-[#1da1f2]/50 
				rounded-lg px-4 py-2.5 text-center inline-flex items-center
				dark:focus:ring-[#1da1f2]/55 hover:shadow-lg transition-all
				duration-200 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-90 hover:opacity-100
				lg:ml-8 text-xl"
			>
				My projects üìÅ
			</a>
			<a 
				href="/contact" 
				class="text-main hover:text-sunny justify-center cursor-pointer font-bold 
				hover:bg-main focus:ring-4 focus:outline-none focus:ring-[#1da1f2]/50 
				rounded-lg px-4 py-2.5 text-center inline-flex items-center
				dark:focus:ring-[#1da1f2]/55 hover:shadow-lg transition-all
				duration-200 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-90 hover:opacity-100
				lg:ml-8 text-xl"
			>
				Start our trip üöÄ
			</a>
		</section>
	</div>
	<div class="max-w-screen bg-main xl:mt-60 lg:my-40 my-8 overflow-hidden flex flex-1 lg:justify-center justify-start flex-col">
		<section class="lg:px-10 relative mt-6 py-2 self-center">
			<h2 class="text-sunny self-center font-semibold sm:text-5xl text-3xl" style={{"text-shadow": "2px 2px 4px #252525"}}>WORKS</h2>
		</section>
		<section class="flex flex-1 px-12 py-4 text-sunny text-bold flex-col">
			<div class="flex text-subtext font-semibold sm:text-2xl text-xl py-2 px-2">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="sm:w-8 sm:h-8 w-6 h-6">
					<path fill-rule="evenodd" d="M14.447 3.026a.75.75 0 0 1 .527.921l-4.5 16.5a.75.75 0 0 1-1.448-.394l4.5-16.5a.75.75 0 0 1 .921-.527ZM16.72 6.22a.75.75 0 0 1 1.06 0l5.25 5.25a.75.75 0 0 1 0 1.06l-5.25 5.25a.75.75 0 1 1-1.06-1.06L21.44 12l-4.72-4.72a.75.75 0 0 1 0-1.06Zm-9.44 0a.75.75 0 0 1 0 1.06L2.56 12l4.72 4.72a.75.75 0 0 1-1.06 1.06L.97 12.53a.75.75 0 0 1 0-1.06l5.25-5.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
				</svg>
				<h3 class="px-2 mb-2">
					Recent Projects
				</h3>
			</div>
			<div>
				{
					project.map((project,index) => {
						return <ProjectCard project={project} index={index} client:visible/>
					})
				}
			</div>
		</section>
	</div>
</Layout>

