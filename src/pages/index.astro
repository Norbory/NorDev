		<section>
			<figure class="w-full" >
				<img
					class="svg w-96 h-96 object-cover object-center"
					style={{filter: 'drop-shadow(6px 3px 8px #252525)'}} 
					src="https://res.cloudinary.com/dmbtlv0hg/image/upload/v1705334934/foto-removebg-preview_omohfq.png" 
					alt="Foto de mi persona"
				>
