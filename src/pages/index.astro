<style>
	.svg {
       display: block;
       padding: 70px auto;
     }
     @keyframes spin {
       from {
         transform: rotate(0deg);
       }
       to {
		 transform: rotate(360deg) scale(2);
         opacity: 10;
       }
     }
</style>

<script>
	const button = document.querySelector('.button') as HTMLElement;
	const svg = document.querySelector('.svg') as HTMLElement;
	let isAnimating = false;

	if (button && svg) {
		button.addEventListener('click', () => {
			isAnimating = !isAnimating;
		if (isAnimating) {
			button.textContent = 'Me equivoque üòÖ';
			svg.style.animation = 'spin 4s linear infinite';
		} else {
			button.textContent = 'Contratame';
			svg.style.animation = '';
		}
		});
	}
	
</script>