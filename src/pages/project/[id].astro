---
import { project } from '../../utils/utilsData'
import { type Project } from '../../types/project'
import Layout from '../../layouts/Layout.astro';

const {id} = Astro.params

let proyecto: Project | undefined;

if (typeof id === 'string') {
    proyecto = project[parseInt(id, 10)];
}

export function getStaticPaths () {
    
    return [
        {params: {id: '0'}},
        {params: {id: '1'}},
        {params: {id: '2'}},
        {params: {id: '3'}},
    ];
};
---

<Layout title="Dream Developer | Enlighten the path">
    <section class="max-w-4xl mx-auto px-4 pb-8">
        <h1 class="text-4xl font-bold mb-6">{proyecto?.title}</h1>
        <div class="flex flex-col md:flex-row gap-8 items-center mb-8">
            <img src={proyecto?.image} alt={proyecto?.title} class="w-full md:w-72 h-auto object-cover rounded-lg" />
            <div>
                <p class="text-lg font-medium mb-2">Description:</p>
                <p class="text-gray-700">{proyecto?.description}</p>
            </div>
        </div>
        <div class="mb-8">
            <p class="text-lg font-medium mb-2">Tools Used:</p>
            <ul class="list-disc pl-6">
                {proyecto?.tools.map((tool, index) => (
                    <li key={index} class="text-gray-700">{tool}</li>
                ))}
            </ul>
        </div>
        <div class="flex justify-center md:justify-start gap-4">
            <a href={proyecto?.linkfront} target="_blank" rel="noopener noreferrer" class="btn">View Demo</a>
            <a href={proyecto?.linkback} target="_blank" rel="noopener noreferrer" class="btn">View Backend Code</a>
            <a href={proyecto?.code} target="_blank" rel="noopener noreferrer" class="btn">View Frontend Code</a>
        </div>
    </section>
</Layout>


